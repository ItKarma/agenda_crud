<%- include('includes/head'); %>
<%- include('includes/nav'); %>
  <body>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8">
          <h1 class=" text-center"> Contato</h1>
          <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

          <p class="text-center lead">Todos os campos sao obrigatorios.</p>

          <%- include('includes/messages'); %>

<% if(contatoId._id) { %>
  <form action="/contato/edit/<%= contatoId._id %>" method="POST">
<% }  else { %>
  <form action="/contato/register" method="POST">
  <% } %>
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
                <label >Nome e Sobrenome</label>
                <input value="<%= contatoId.nome %>" type="text" class="form-control" name="nome">
            </div>
            <div class="form-group">
                <label >Email</label>
                <input value="<%= contatoId.email %>"  type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label >Telefone</label>
                <input value="<%= contatoId.telefone %>"  type="tel" class="form-control" name="telefone">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>

        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>


  <%- include('includes/footer'); %>